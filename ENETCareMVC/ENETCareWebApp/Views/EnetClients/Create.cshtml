
@using BusinessLogicLayer
@using BusinessLogicLayer.Models
@model BusinessLogicLayer.Models.EnetClient

@{
    ViewBag.Title = "Create Client";
}

<h2>Create Client</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EnetClient</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="District">District</label>
            <div class="col-md-10">
                @Session["DistrictForCurrentEngineer"]
                <input data-val="true" id="DistrictId" name="DistrictId" type="hidden" value=@Session["DistrictIdForCurrentEngineer"]>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                <input data-val="true" id="Name" name="Name" type="text" maxlength="50">
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input data-val="true" id="Address" name="Address" type="text" maxlength="50">
                @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
            </div>
        </div>
        <br />
        <font color="red">@ViewBag.ErrorMsg</font>
        <br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
